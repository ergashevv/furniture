generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id            String    @id @default(cuid())
  nameUz        String
  nameRu        String
  slug          String    @unique
  descriptionUz String?
  descriptionRu String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  products      Product[]

  @@map("Category")
}

model Product {
  id            String    @id @default(cuid())
  nameUz        String
  nameRu        String
  slug          String    @unique
  descriptionUz String
  descriptionRu String
  price         Float?
  originalPrice Float?
  imageUrl      String?
  categoryId    String?
  featured      Boolean   @default(false)
  visible       Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  images        String[]  @default([])
  size          String?
  material      String?
  warranty      String?
  colors        String[]  @default([])
  category      Category? @relation(fields: [categoryId], references: [id])

  @@map("Product")
}

model GalleryItem {
  id            String   @id @default(cuid())
  titleUz       String
  titleRu       String
  descriptionUz String?
  descriptionRu String?
  imageUrl      String
  videoUrl      String?
  category      String?
  featured      Boolean  @default(false)
  visible       Boolean  @default(true)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("GalleryItem")
}

model Order {
  id           String   @id @default(cuid())
  customerName String
  email        String
  phone        String?
  address      String?
  productName  String?
  description  String?
  designFiles  String[] @default([])
  status       String   @default("pending")
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
  @@map("Order")
}

model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Admin")
}

model Service {
  id            String   @id @default(cuid())
  nameUz        String
  nameRu        String
  slug          String   @unique
  descriptionUz String
  descriptionRu String
  icon          String?
  price         String?
  features      String[] @default([])
  order         Int      @default(0)
  visible       Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("Service")
}

model Store {
  id           String   @id @default(cuid())
  nameUz       String
  nameRu       String
  addressUz    String
  addressRu    String
  phone        String?
  email        String?
  workingHours String?
  latitude     Float?
  longitude    Float?
  order        Int      @default(0)
  visible      Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("Store")
}

model Review {
  id           String   @id @default(cuid())
  customerName String
  rating       Int      @default(5)
  commentUz    String
  commentRu    String
  location     String?
  avatar       String?
  visible      Boolean  @default(true)
  featured     Boolean  @default(false)
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("Review")
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String?
  subject   String?
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("ContactMessage")
}

model Banner {
  id            String   @id @default(cuid())
  titleUz       String
  titleRu       String
  subtitleUz    String?
  subtitleRu    String?
  descriptionUz String?
  descriptionRu String?
  imageUrl      String
  buttonTextUz  String?
  buttonTextRu  String?
  buttonLink    String?
  overlay       Float    @default(0.5)
  visible       Boolean  @default(true)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("Banner")
}
